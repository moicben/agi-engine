# Supabase Configuration
# Phase 4: Supabase Integration
# 
# Copiez ce fichier vers .env et remplissez les valeurs
# Obtenez ces valeurs depuis votre dashboard Supabase

# Supabase Project Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here

# Database Connection (optionnel pour connexion directe)
SUPABASE_DB_HOST=db.your-project.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your-db-password

# Connection Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE=10000
DB_POOL_ACQUIRE=30000
DB_POOL_EVICT=1000

# Retry Configuration
DB_RETRY_MAX=3
DB_RETRY_DELAY=1000
DB_RETRY_FACTOR=2

# Timeout Configuration
DB_QUERY_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000

# Security Configuration
SUPABASE_RLS_ENABLED=true
SUPABASE_ENFORCE_AUTH=true

# Logging Configuration
SUPABASE_LOGGING_ENABLED=true
SUPABASE_LOG_LEVEL=info
SUPABASE_LOG_QUERIES=false

# Environment
NODE_ENV=development